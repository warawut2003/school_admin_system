generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  stdId String @id @default(uuid())
  firstName String
  lastName String
  major String
  faculty String
  email String @unique
  phone String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}